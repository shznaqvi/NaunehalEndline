<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/ccvItem"
        style="@style/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="?android:attr/selectableItemBackground"
        app:cardCornerRadius="12dp"
        android:minHeight="64dp"
        android:padding="2dp">


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical">

            <View
                android:id="@+id/cloaked"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="#7f7f7f7f"
                android:elevation="10dp"
                tools:visibility="gone"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/cfmRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="0dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp">

                        <ImageView
                            android:id="@+id/mainIcon"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"

                            android:background="@color/gray"
                            android:padding="4dp"
                            android:src="@drawable/ic_not_available"
                            tools:src="@drawable/ic_boy" />

                        <TextView
                            android:id="@+id/markChild"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:background="@android:drawable/ic_menu_myplaces"
                            android:backgroundTint="@color/redLight"
                            android:textColor="@color/colorAccent"
                            android:textSize="24dp"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/childcheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:alpha="0.6"

                            android:background="@drawable/camera_checked"
                            android:textColor="@color/colorAccent"
                            android:textSize="24dp"
                            android:visibility="invisible"
                            tools:visibility="visible" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/chh02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female Name"
                        android:textColor="@color/grayDark"
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/chh08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mother's Name"
                        android:textColor="@color/black"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/chh05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="age years"
                        android:includeFontPadding="false"
                        android:textColor="@color/gray"
                        android:textStyle="italic" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/indexedBar"
                android:layout_width="wrap_content"
                android:layout_height="2sp"
                android:layout_alignParentBottom="true"
                android:background="@color/redLight"
                android:orientation="horizontal"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/addSibling"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/all_round_corners_stroke"
        android:backgroundTint="@color/colorAccent"
        android:backgroundTintMode="add"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:minHeight="32dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="+ Add Sibling"
        android:textColor="@color/white" />
</LinearLayout>